
{% extends "/templates/base.html.twig" %}

{% block title %}
    New Post
{% endblock %}

{% block head %}
    {{ parent() }}
    <style type="text/css"> 
        body {text-align: center;}
    </style>
{% endblock %}

{% block content %}
    <h1>New Post</h1>
    
    <form action="/post" method="POST" >
        <p><input type="text" placeholder="Title" name="title"></p>
        <p><textarea placeholder="Content" name="content" rows="10" cols="50"></textarea></p>
        <p><input type="text" placeholder="Created at" name="created_at"></p>
        <p><label>Updated at: </label> <input type="date" name="updated_at"></p>
    
        <button type="submit">Save Post!</button>
    </form>
    
    
    
{% endblock %}